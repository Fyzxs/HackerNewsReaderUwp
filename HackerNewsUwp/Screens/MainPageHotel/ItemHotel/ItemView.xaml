<UserControl
    x:Class="HackerNewsUwp.Screens.MainPageHotel.ItemHotel.ItemView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:userControls="using:HackerNewsUwp.UserControls"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <userControls:QgSetTextBox x:Name="TxtTitle" Width="232" Height="25" Text="[Item Title]" VerticalAlignment="Top" Canvas.Top="1" Canvas.Left="1" HorizontalAlignment="Left" HorizontalContentAlignment="Left" IsReadOnly="True" PlaceholderText="[Item Title]"/>
        <userControls:QgSetTextBox x:Name="TxtAuthor" Text="" VerticalAlignment="Top" Canvas.Top="1" Canvas.Left="1" HorizontalContentAlignment="Left" IsReadOnly="True" PlaceholderText="[Item Author]" Margin="0,34,0,0" HorizontalAlignment="Left" Width="232"/>

    </Grid>
</UserControl>
