<UserControl
    x:Class="HackerNewsUwp.Screens.MainPageHotel.ItemHotel.ItemView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:userControls="using:HackerNewsUwp.UserControls"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <userControls:QgSetTextBox x:Name="TxtTitle" Width="390" Height="25" Text="[Story TitleInto]" VerticalAlignment="Top" Canvas.Top="1" Canvas.Left="1" HorizontalAlignment="Left" HorizontalContentAlignment="Left" IsReadOnly="True" PlaceholderText="[Story TitleInto]" IsEnabled="False" IsTabStop="False" IsSpellCheckEnabled="False" IsHitTestVisible="False" IsTextPredictionEnabled="False"/>
        <userControls:QgSetTextBox x:Name="TxtAuthor" Width="145" Height="25" Text="[Story AuthorInto]" VerticalAlignment="Top" HorizontalAlignment="Left" HorizontalContentAlignment="Left" IsReadOnly="True" PlaceholderText="[Story TitleInto]" Margin="0,37,0,0" IsEnabled="False" IsTabStop="False" IsTextPredictionEnabled="False" IsHitTestVisible="False" IsSpellCheckEnabled="False"/>

    </Grid>
</UserControl>
